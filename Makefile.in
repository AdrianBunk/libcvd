			cvd_src/exceptions.o						\
			cvd_src/image_io.o							\
			cvd_src/bayer.o 							\
			cvd_src/colourspace_convert.o 				\
			cvd_src/vision.o 							\
			cvd_src/draw.o 								\
			pnm_src/instantiations.o					\
			pnm_src/pnm_grok.o							\
			pnm_src/bmp.o							\
			pnm_src/save_postscript.o					\
			cvd_src/fast_corner.o                       \
			cvd_src/convolution.o						\
			cvd_src/fast/9_@fast_pointers@_@fast_force@.o							\
			cvd_src/fast/10_@fast_pointers@_@fast_force@.o							\
			cvd_src/fast/11_@fast_pointers@_@fast_force@.o							\
			cvd_src/fast/12_@fast_pointers@_@fast_force@.o							\

################################################################################
#
# Stuff requiring TooN

ifeq (@have_toon@,yes)
	CVD_OBJS+=cvd_src/brezenham.o						\
			  #cvd_src/se3.o								\
			  #cvd_src/so3.o
endif

ifeq (@have_lapack@,yes)
	CVD_OBJS+=
endif


################################################################################
#
# Libraries
ifeq (@have_tiff@,yes)
	CVD_OBJS+=pnm_src/tiff.o
endif

ifeq (@have_jpeg@,yes)
	CVD_OBJS+=pnm_src/jpeg.o
endif

ifeq (@have_ffmpeg@,yes)
	CVD_OBJS+=cvd_src/videofilebuffer.o
endif

ifeq (@have_videodisplay@,yes)
	CVD_OBJS+=cvd_src/videodisplay.o
endif

################################################################################
#
# Linux

ifeq (@have_dvbuffer@,yes)
	CVD_OBJS+=cvd_src/Linux/dvbuffer.o
endif

ifeq (@have_v4l2buffer@,yes)
	CVD_OBJS+=cvd_src/Linux/v4l2buffer.o
endif

ifeq (@have_v4l1buffer@,yes)
	CVD_OBJS+=cvd_src/Linux/v4l1buffer.o
endif

################################################################################
#
# IRIX
ifeq (@have_o2buffer@,yes)
	CVD_OBJS+=cvd_src/IRIX/O2buffer.o cvd_src/IRIX/sgi-video.o
endif


################################################################################
#
#Architecture objects
ifeq (@host_cpu@@have_sse2@,i686yes)
	CVD_OBJS+= cvd_src/i686/byte_to_double_gradient.o
endif

ifeq (@host_cpu@@have_sse@,i686yes)
	CVD_OBJS+= cvd_src/i686/byte_to_float_gradient.o \
			cvd_src/i686/convolve_float.o \
			cvd_src/i686/convolve_float4.o  
endif

ifeq (@host_cpu@@have_mmxext@,i686yes)
	CVD_OBJS+=cvd_src/i686/yuv411_to_stuff_MMX.o  \
			cvd_src/i686/halfsample.o
else
	CVD_OBJS+=cvd_src/yuv411_to_stuff.o
endif

OBJS=$(CVD_OBJS)



ifeq (@osx_hacks@,yes)
	soname=libcvd.dylib
	soname1=libcvd-@major@.dylib
	soname2=libcvd-@major@.@minor@.dylib
	shared=-dynamiclib
else
	soname=libcvd.so
	soname1=libcvd.so.@major@
	soname2=libcvd.so.@major@.@minor@
	shared=-shared
endif

sos= $(soname) $(soname1) $(soname2)

all: libcvd.a $(soname) progs

$(soname): $(OBJS)
	rm -f $(sos)
	$(CXX) $(shared) -o $(soname2) $(OBJS) $(LIBS)
	ln -s $(soname2) $(soname1)
	ln -s $(soname1) $(soname)

libcvd.a: $(OBJS)
	$(AR) crvs libcvd.a $(OBJS)
	$(RANLIB) libcvd.a


LDFLAGS=-I. -L. -lcvd
PROGS=@progs@
TESTPROGS=@testprogs@

$(PROGS):$(soname)
$(TESTPROGS):$(soname)

testprogs: $(TESTPROGS)
progs: $(PROGS)


@docs@:
	doxygen Doxyfile

#If the mandir is older than the lib, then remake. A bit of a hack
man: libcvd.a
	doxygen Doxyfile
	touch man

install: progs $(soname) libcvd.a
	mkdir -p $(includedir)
	mkdir -p $(libdir)
	mkdir -p $(bindir)
	cp -r cvd $(includedir)
	cp $(soname2) $(libdir)
	ln -fs  $(libdir)/$(soname2) $(libdir)/$(soname1)
	ln -fs  $(libdir)/$(soname1) $(libdir)/$(soname)
	cp libcvd.a $(libdir)
	cp $(PROGS) $(bindir)
	mkdir -p '$(mandir)'

clean:
	/bin/rm -f tmp libcvd.a $(sos)
	find . -name '*.o' | xargs rm -f
	find progs/ -perm +0100 -type f | xargs rm -f
	rm -rf html man
distclean: clean
	/bin/rm -f Makefile config.h config.status config.cache config.log cvd/config.h

.PRECIOUS: %.o

%.o: %.cc
	$(CXX) -I. $(OFLAGS)  $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

%.o: %.cxx
	$(CXX) -I. $(OFLAGS) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

%.o: %.C
	$(CXX) -I. $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

%: %.o
	$(CXX) -o $@ $< $(LDFLAGS)


