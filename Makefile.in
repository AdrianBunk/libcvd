################################################################################
#
# CVD objects
#

CVD_OBJS=	cvd_src/cvd_timer.o 						\
			cvd_src/globlist.o							\
			cvd_src/diskbuffer2.o						\
			cvd_src/deinterlacebuffer.o					\
			cvd_src/exceptions.o						\
			cvd_src/image_io.o							\
			cvd_src/bayer.o 							\
			cvd_src/colourspace_convert.o 				\
			pnm_src/instantiations.o					\
			pnm_src/pnm_grok.o							\

################################################################################
#
# Stuff requiring TooN

ifeq (@have_toon@,yes)
	CVD_OBJS+=cvd_scr/brezenham.o						\
			  cvd_src/se3.o								\
			  cvd_src/so3.o								\
endif

ifeq (@have_lapack@,yes)
	CVD_OBJS+=
endif


################################################################################
#
# Libraries 
ifeq (@have_tiff@,yes)
	CVD_OBJS+=pnm_src/tiff.o	
endif

ifeq (@have_jpeg@,yes)
	CVD_OBJS+=pnm_src/jpeg.o	
endif

ifeq (@have_ffmpeg@,yes)
	CVD_OBJS+=cvd_src/videofilebuffer.o
endif

ifeq (@have_videodisplay@,yes)
	CVD_OBJS+=cvd_src/videodisplay.o
endif

################################################################################
#
# Linux

ifeq (@have_dvbuffer@,yes)
	CVD_OBJS+=cvd_src/Linux/dvbuffer.o
endif

ifeq (@have_v4l2buffer@,yes)
	CVD_OBJS+=cvd_src/Linux/v4l2buffer.o
endif

ifeq (@have_v4l1buffer@,yes)
	CVD_OBJS+=cvd_src/Linux/v4l1buffer.o
endif

################################################################################
#
# IRIX
ifeq (@have_o2buffer@,yes)
	CVD_OBJS+=cvd_src/IRIX/O2buffer.o
endif


################################################################################
#
#Architecture objects

ifeq ($(arch),i686)
	CVD_OBJS+=cvd_src/i686/yuv411_to_stuff_MMX.o
else
	CVD_OBJS+=cvd_src/yuv411_to_stuff.o
endif

OBJS=$(CVD_OBJS)


all: libcvd.a libcvd.so progs

soname=libcvd.so
soname1=libcvd.so.@major@
soname2=libcvd.so.@major@.@minor@ 

libcvd.so: $(OBJS)
	rm -f libcvd.so*
	$(CXX) -shared -o $(soname2) $(OBJS) $(LIBS)
	ln -s $(soname2) $(soname1)
	ln -s $(soname1) $(soname)

libcvd.a: $(OBJS)
	$(AR) crvs libcvd.a $(OBJS)
	$(RANLIB) libcvd.a


LDFLAGS=-I. -L. -lcvd
PROGS=@progs@
TESTPROGS=@testprogs@

$(PROGS):libcvd.so
$(TESTPROGS):libcvd.so

testprogs: $(TESTPROGS)
progs: $(PROGS)


@docs@:
	doxygen Doxyfile

install:
	cp -r cvd $(includedir)
	cp libcvd.* $(libdir)
	cp $(PROGS) $(bindir)

clean:
	/bin/rm -f tmp libcvd.a libcvd.so*
	find . -name '*.o' | xargs rm -f
distclean: clean
	/bin/rm -f Makefile config.h config.status config.cache config.log cvd/config.h 

#.PHONY: all install clean distclean

.SUFFIXES:
.SUFFIXES: .cxx .o .cc .C

%.o: %.cc
	$(CXX) -I. $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

%.o: %.cxx
	$(CXX) -I. $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

%.o: %.C
	$(CXX) -I. $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

